@model IEnumerable<ProductImage>


@if (Model.FirstOrDefault() != null)
{
    foreach (ProductImage productImage in Model)
    {
                <div class="update-img d-flex justify-content-between">
                    <img style="width: 200px;" src="~/assets/Images/products/@productImage.Image" />
                    @if (Model.Count() > 0)
                    {
                       <a class="deleteImg" data-prodid="@productImage.ProductId" data-imageId="@productImage.ID">X</a>
                    }
                </div>
    }
}