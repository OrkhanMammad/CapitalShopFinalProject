@model List<Category>

@{
    int a = 1;
}
<div class="container">
    <div style="padding:60px;">
<div class="row">
    <div class="col-lg-4">
        <h1 class="h3 mb-4 text-gray-800">Categories Page</h1>
    </div>
    <div class="col-lg-2">
        <a asp-action="create" asp-controller="category" asp-area="manage" class="btn btn-primary">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (Category category in Model)
                {
                        <tr>
                    
                         <td>@a</td>  
                          
                        <td>@category.Name</td>                        
                        <td>
                                <a asp-area="manage" asp-controller="Category" asp-action="detail" asp-route-categoryId="@category.ID" class="btn btn-primary">Detail</a>
                                <a asp-area="manage" asp-controller="Category" asp-action="update" asp-route-categoryId="@category.ID" class="btn btn-warning">Update</a>
                                <a asp-area="manage" asp-controller="Category" asp-action="DeleteDetail" asp-route-categoryId="@category.ID" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                         a++;
                        

                   
                }
                        



                    </tbody>
        </table>
    </div>
        </div>
</div>
</div>
