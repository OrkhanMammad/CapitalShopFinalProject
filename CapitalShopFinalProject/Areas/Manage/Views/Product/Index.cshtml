@model List<Product>

@{
    int a = 1;
}
<div class="container">
    <div style="padding:60px;">
        <div class="row">
            <div class="col-lg-4">
                <h1 class="h3 mb-4 text-gray-800">Products Page</h1>
            </div>
            <div class="col-lg-2">
                <a asp-action="create" asp-controller="product" asp-area="manage" class="btn btn-primary">Create</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Product product in Model)
                        {
                            <tr>

                                <td>@a</td>

                                <td>@product.Title</td>
                                <td>
                                    <a asp-area="manage" asp-controller="product" asp-action="detail" asp-route-productId="@product.ID" class="btn btn-primary">Detail</a>
                                    <a asp-area="manage" asp-controller="product" asp-action="update" asp-route-productId="@product.ID" class="btn btn-warning">Update</a>
                                    <a asp-area="manage" asp-controller="product" asp-action="DeleteDetail" asp-route-productId="@product.ID" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            a++;



                        }




                    </tbody>
                </table>
            </div>
        </div>
        <div class="pagination1">
            @if (ViewBag.pageIndex > 1)
            {
                <a class="pageIndexSelector1" asp-action="index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@(ViewBag.pageIndex-1)">Previous</a>

            }

            @for (var i = 1; i <= ViewBag.pageCount; i++)
            {
                if (i >= ViewBag.pageIndex - 2 && i <= ViewBag.pageIndex + 2)
                {
                    <a class="pageIndexSelector1 @(i==ViewBag.pageIndex ? "active-for-pagination" : " ")" asp-action="index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@i">@i</a>

                }
            }
            @if (ViewBag.pageIndex < ViewBag.pageCount)
            {
                <a class="pageIndexSelector1" asp-action="index" asp-controller="product" asp-area="manage" asp-route-pageIndex="@(ViewBag.pageIndex+1)">Next</a>

            }

        </div>
    </div>
  
</div>
