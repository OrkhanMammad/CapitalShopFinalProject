@model Product


<div class="row">
    <div class="col-lg-8">
        <form asp-action="create" asp-controller="product" asp-area="manage" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text text-danger"></span>
            </div>



            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text text-danger"></span>
            </div>

            <div class="mb-3">
                 <label asp-for="DiscountedPrice" class="form-label"></label>
                <input asp-for="DiscountedPrice" class="form-control">
                <span asp-validation-for="DiscountedPrice" class="text text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="Count" class="form-label"></label>
                <input asp-for="Count" class="form-control">
                <span asp-validation-for="Count" class="text text-danger"></span>
            </div>




            <div style="margin-bottom:1rem" id="fileInput" class="form-group mb-3">
                <label asp-for="MainFile" class="form-label"></label>
                <input asp-for="MainFile" accept="image/jpeg" type="file" class="form-control">
                <span asp-validation-for="MainFile" class=" text text-danger"></span>
            </div>
          

            <div class="form-group my-5">
                <label style="margin-bottom: 1rem" asp-for="ProductTypeId"></label>
                <select style="margin-bottom: 1rem" asp-for="ProductTypeId" class="form-control" asp-items="new SelectList(ViewBag.ProductTypes,nameof(ProductType.ID), nameof(ProductType.Name))">
                </select>
                <span asp-validation-for=ProductTypeId class="text text-danger"></span>
            </div>


            <div class="form-group my-5">
                <label style="margin-bottom: 1rem" asp-for="CategoryId"></label>
                <select style="margin-bottom: 1rem" asp-for="CategoryId" class="form-control" asp-items="new SelectList(ViewBag.Categories,nameof(Category.ID), nameof(Category.Name))">
                </select>
                <span asp-validation-for="CategoryId" class="text text-danger"></span>
            </div>

            <div class="form-group my-5">
                <label style="margin-bottom: 1rem" asp-for="Description"></label>
                <textarea style="margin-bottom: 1rem" asp-for="Description" class="form-control" style="height: 300px" rows="3"></textarea>
                <span asp-validation-for="Description" class="text text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary my-5">Submit</button>
        </form>
    </div>
</div>

